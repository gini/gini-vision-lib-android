<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:contentPadding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/gv_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/gv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gv_checkbox"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@id/edit"
            android:layout_toEndOf="@id/gv_checkbox"
            tools:text="Nike Sportswear Air Max 97 - Sneaker Low"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gv_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gv_description"
            android:layout_alignStart="@id/gv_description"
            android:text="Quantity: " />

        <TextView
            android:id="@+id/gv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/gv_quantity_label"
            android:layout_alignBaseline="@id/gv_quantity_label"
            tools:text="1" />

        <net.gini.android.vision.internal.ui.CustomFontButton
            android:id="@+id/edit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gv_description"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/gv_edit_icon"
            android:drawablePadding="0dp"
            android:paddingEnd="0dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:textColor="#0087dc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gv_amount_integral_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gv_quantity"
            android:layout_toStartOf="@id/gv_amount_fraction_part"
            android:includeFontPadding="false"
            tools:text="â‚¬76"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gv_amount_fraction_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/gv_amount_integral_part"
            android:layout_alignParentEnd="true"
            tools:text=".48"
            android:textColor="#000"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>